		ORG 2000H
RESET:	MOV R1, #0
		MOV DPTR, #1000H
CORE:	MOV A, #11100000B	//1MC
		ADD A, R1		//1MC
		MOVX @DPTR, A		//2MC
		CALL DELAY		//2MC
		INC R1			//1MC
		CJNE R1, #0AH, CORE	//2MC
		SJMP RESET
DELAY:	MOV R2, #8
LOOP2:	MOV R3, #240
LOOP1:	MOV R4, #240
		DJNZ R4, $
		DJNZ R3, LOOP1
		DJNZ R2, LOOP2
		RET
		END

